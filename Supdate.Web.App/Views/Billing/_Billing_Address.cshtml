@model Supdate.Model.Company
@{
  Layout = null;
  var modalTitle = "Billing Address";
}

@using (Html.BeginForm("BillingAddress", "Billing", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 id="recipDetailsHeader" class="modal-title">@modalTitle</h4>
  </div>
  <div class="modal-body">
    <p>The name and address provided below will appear on your subscription invoices.</p>
    <hr />
    <div class="form-group">
      @Html.LabelFor(m => m.BillingName, new { @class = "col-md-3 control-label" })
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BillingName)
        @Html.HiddenFor(m => m.UniqueId)
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Address</label>
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingAddress1, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BillingAddress1)
      </div>
      <label class="col-md-3 control-label hidden-xs"></label>
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingAddress2, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BillingAddress2)
      </div>
      <label class="col-md-3 control-label hidden-xs"></label>
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingCity, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.BillingCity) })
        @Html.ValidationMessageFor(m => m.BillingAddress1)
      </div>
      <label class="col-md-3 control-label hidden-xs"></label>
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingPostCode, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.BillingPostCode) })
        @Html.ValidationMessageFor(m => m.BillingPostCode)
      </div>
    </div>
    <!--
    <div class="form-group">
      @Html.LabelFor(m => m.BillingCountry, new { @class = "col-md-3 control-label" })
      <div class="col-md-9">
        @Html.TextBoxFor(m => m.BillingCountry, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BillingCountry)
      </div>
    </div>
     -->
  </div>
  <div class="modal-footer">
    <button class="btn btn-save ladda-button" data-style="expand-left" type="submit"><span class="ladda-label"><i class="fa fa-check"></i> Save</span></button>
    <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
  </div>
}
