@model System.Data.DataTable
@{
  Layout = null;
  var modalTitle = "Upload CSV File";
}
@using (Html.BeginForm("UploadCsv", "Recipients", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@modalTitle</h4>
  </div>
  <div class="modal-body">
    <div class="form-group ">
      If you have a lot of recipients then it may be quicker to import them from a CSV file.
    </div>
    <div class="form-group ">
      <div class="row">
        <div class="col-sm-12">
          @Html.AntiForgeryToken()

          <div style="max-width: 300px;">
            <input type="file" name="csvFile">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-save ladda-button"  data-style="expand-left" type="submit"><span class="ladda-label"><i class="fa fa-upload"></i> Upload</span></button>
    <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
  </div>
  <script>
    $('input[type="file"]').prettyFile();
  </script>
}

