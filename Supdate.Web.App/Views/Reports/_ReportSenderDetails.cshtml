@model Supdate.Model.ReportEmailBuilder
<div class="modal fade" id="senderDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="recipDetailsHeader" class="modal-title">Sender Address</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>From</label>
          <select class="form-control" name="UseCustomSender" id="UseCustomSender">
            <option value="false" @if (!Model.UseCustomSender) { @("selected")  }>@Model.DefaultSender</option>
            <option value="true" @if (Model.UseCustomSender) { @("selected")  }>Custom Address</option>

          </select>
        </div>
        <div class="alert alert-block alert-info fade in" id="sender-info-replyto" @if (Model.UseCustomSender) { <text> style="display: none;" </text>    }>
          <strong>Default Choice.</strong> This is your safest option to avoid getting flagged as spam. <br />
          The 'reply-to' address will be set to @Model.OwnerEmail.
        </div>

        <div id="sender-info-custom" @if (!Model.UseCustomSender) { <text> style="display: none;" </text>  }>
          <div class="alert alert-block alert-danger fade in">
            <strong>Warning!</strong> Using this option can result in your emails being flagged as spam unless you update your DNS to authorise us to send mail on your behalf.
          </div>
          <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(m => m.CustomSenderName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CustomSenderName)
          </div>
          <div class="form-group">
            <label>Email Address</label>
            @Html.TextBoxFor(m => m.CustomSenderEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CustomSenderEmail)
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <a id="saveSenderChanges" class="btn btn-done"><i class="fa fa-check"></i> Update</a>
        <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
      </div>
    </div>
  </div>
</div>
