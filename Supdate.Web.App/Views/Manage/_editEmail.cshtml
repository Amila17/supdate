@model Supdate.Web.App.Models.ChangeEmailModel
@{
  Layout = null;
  var modalTitle = "Edit Email Address";
}
@using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post, new { role = "form", @class = "ajax-form" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@modalTitle</h4>
  </div>
  <div class="modal-body">
    <div class="form-group ">
      <div class="row">
        <div class="col-sm-12">
          Enter your new email address below.<br/>
           We will send you a link for you to confirm the change.
        </div>
      </div>
    </div>
    <div class="form-group ">
      <div class="row">
        <div class="col-sm-12 col-md-6">
          @Html.LabelFor(m => m.EmailAddress, "New Email Address")
          @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
          @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-save ladda-button ajax-submit" data-success-callback="changeemail_cb" data-style="expand-left" type="button" id="saveRecipientDetails"><span class="ladda-label"><i class="fa fa-check"></i> Save</span></button>
    <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
  </div>
}

