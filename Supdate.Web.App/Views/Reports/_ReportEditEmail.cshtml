@model Supdate.Model.ReportEmailBuilder
<div class="modal fade" id="customizeEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="recipDetailsHeader" class="modal-title">Edit Email</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>Subject</label>
          @Html.TextBoxFor(m => m.ReportEmailSubject, new { @class = "form-control" })
        </div>
        <div class="form-group">
          <div class="pull-right"><a href="javascript:void(0);" id="restore-defaults" style="font-size: 0.8em; display: none;">Restore Defaults</a></div>
          <label>Message</label>
          @Html.TextAreaFor(m => m.ReportEmailBody, new { @class = "form-control", @cols = 80, @rows = 15 })
        </div>

      </div>
      <div class="modal-footer">
        <a id="saveEmailChanges" class="btn btn-done"><i class="fa fa-check"></i> Update</a>
        <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
      </div>
    </div>
  </div>
</div>
