@model dynamic
@{
  Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width" />
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>Supdate - Confirm your account</title>
  <style>
        /* -------------------------------------
        GLOBAL
    ------------------------------------- */
        * {
          margin: 0;
          padding: 0;
          font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
          font-size: 100%;
          line-height: 1.6;
        }

        img {
          max-width: 100%;
        }

        body {
          -webkit-font-smoothing: antialiased;
          -webkit-text-size-adjust: none;
          width: 100% !important;
          height: 100%;
        }
  </style>
</head>
<body>
  <table style="width:100%;margin:0;">
    <tr>
      <td width="100%" height="100%" bgcolor='#f6f6f6' style="width:100%;padding-top:12px;color:#000000;">
  <!-- body -->
        <table class="body-wrap" style="width: 100%;">
    <tr>
      <td></td>
            <td class="container" bgcolor="#FFFFFF" style="border: 1px solid #f0f0f0; display:block!important; max-width:600px!important; margin:0 auto!important; clear:both!important;">
        <!-- content -->
              <div class="content" style="padding:20px; max-width:600px; margin:0 auto; display:block;">
                <table style="width: 100%;">
            <tr>
                    <td style="font-weight: normal; font-size:14px;">
                      <h2 style="font-family: 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif; line-height: 1.1; margin-bottom:15px; color:#000; margin: 40px 0 10px; line-height: 1.2; font-weight:200;font-size:28px;">
                        Action Required
                      </h2>
                      <p style="margin-bottom: 10px;">
                        <strong>Confirm your new email address</strong>
                      </p>
                      <p style="margin-bottom: 10px;">Click the button below to confirm you wish to change your registered email address.</p>

                      <p style="margin-bottom: 10px;">
                        <center>
                          <a href="@Model.ConfirmationUrl" class="btn-supdate" style="text-decoration:none; color: #FFF; background: #f26622; padding:10px 20px; box-shadow: none; margin: 20px 10px 20px 0; text-align:center; cursor:pointer; display: inline-block; border: 1px solid #f26622; border-radius: 4px; font-size:16px;">
                            Confirm my email address
                          </a>
                        </center>
                      </p>
                      <p style="margin-bottom: 10px;">
                        Any questions? give us a shout: <a href="mailto:hello@supdate.com">hello@supdate.com</a>
                      </p>
                    </td>
                  </tr>
                </table>
                </div>
              <!-- /content -->

            </td>
            <td></td>
          </tr>
        </table>
        <!-- /body -->
        <!-- footer -->
        <table class="footer-wrap" style="width: 100%;clear:both!important;">
          <tr>
            <td></td>
            <td class="container" style=" display:block!important; max-width:600px!important; margin:0 auto!important; clear:both!important;">

              <!-- content -->
              <div class="content" style="padding:20px; max-width:600px; margin:0 auto; display:block;">
                <table style="width: 100%;">
                  <tr>
                    <td align="center" style="font-size:12px; color:#666;">
                      <p style="margin-bottom: 10px;">
                        Generated by <a href="http://supdate.com" target="_blank" style="color: #999;">supdate.com</a>.
                      </p>
              </td>
            </tr>
          </table>
        </div>
        <!-- /content -->

      </td>
      <td></td>
    </tr>
  </table>
        <!-- /footer -->
      </td>
    </tr>
  </table>
</body>
</html>
