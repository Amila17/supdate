@model Supdate.Model.Recipient
<div class="modal fade" id="reportSendPreviewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="recipDetailsHeader" class="modal-title">Send Preview</h4>
      </div>
      <div class="modal-body">
        <form role="form" id="recipDetailsForm">
          <div class="form-group ">
            <div class="row">
              <div class="col-sm-6">
                <label for="PreviewFirstName">First Name</label>
                <input class="form-control" id="PreviewFirstName" name="PreviewFirstName" type="text" value="@Model.FirstName">
              </div>
              <div class="col-sm-6">
                <label for="PreviewLastName">Last Name</label>
                <input class="form-control" id="PreviewLastName" name="PreviewLastName" type="text" value="@Model.LastName">
              </div>
            </div>
          </div>
          <div class="form-group ">
            <div class="row">
              <div class="col-sm-12">
                <label for="Email">Email Address</label>
                <input class="form-control" id="PreviewAddress" name="PreviewAddress" type="text" value="@Model.Email">
                <input type="hidden" name="SendPreview" id="SendPreview"/>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="sendPreviewEmail" class="btn btn-save ladda-button" type="button" data-style="expand-left"><span class="ladda-label"><i class="fa fa-envelope-o"></i> Send</span></button>
        <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
      </div>
    </div>
  </div>
</div>
