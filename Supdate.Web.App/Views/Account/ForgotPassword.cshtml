@model Supdate.Web.App.Models.ForgotPasswordViewModel
@{
  Layout = "~/Views/Shared/_PreAuthLayout.cshtml";
  ViewBag.Title = "Supdate - Forgot your password?";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
  @Html.AntiForgeryToken()

  <h2 class="form-signin-heading">Forgot Password</h2>
  <div class="login-wrap">
    <div class="form-group">Enter your email address and we'll send you a link to reset your password.</div>
    <div class="form-group">
      @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", @autofocus = "autofocus" })
      @Html.ValidationMessageFor(m => m.Email)
    </div>
    <input type="submit" value="Email Link"  class="btn btn-login btn-block" />
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
